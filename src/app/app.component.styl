.custom-container
  height 100%
  font-family Roboto
  margin 0
  padding 0
  display block
  overflow auto

.header
  height 5rem
  display flex
  .header__left-bar
    margin auto 2.5rem
    float left
    .edifecs-logo
      width 86px
      height 24px
  .header__right-bar
    margin auto 1.5rem auto auto
    font-size 16px
    .navigation-item
      font-size 16px
      color #475059
      margin auto 0.5rem
      background-color white
      border none
    .navigation-item:hover
      transform scale(1.1, 1.1)
      font-weight bolder
    .navigation-item:active
      color #e78643

.jumbotron
  background-color #273e5d
  height 24rem
  margin 0
  display flex
  color white
  .data-container
    margin auto auto auto 8rem
    display flex
    flex-direction column
    height 90%
  .cloud
    margin auto 0 0.7rem
    font-size 50px
  .description
    margin 0.7rem 0
    font-size 16px
  .custom-btn
    font-size 14px
    font-weight bold
    margin 3rem 0 auto
    background-color #e78643
    width 120px
    height 40px
    color white
    border 2px solid white
    border-radius 4px
  .custom-btn:active
    transform scale(0.9, 0.9)
    box-shadow 2px 2px 2px 2px rgba(158, 158, 158, 0.5)
  .custom-btn:hover
    transform scale(1.1, 1.1)
  @media (max-width: 800px)
    .data-container
      margin auto
      display flex
      flex-direction column
      height 90%
    .cloud
      margin auto auto 0 auto
      font-size 50px
    .description
      margin 0.7rem auto
      font-size 16px
    .custom-btn
      font-size 14px
      font-weight bold
      margin 1.5rem auto auto
      background-color #e78643
      width 120px
      height 40px
      color white
      border 2px solid white
      border-radius 4px
    .custom-btn:active
      transform scale(0.9, 0.9)
      box-shadow 2px 2px 2px 2px rgba(158, 158, 158, 0.5)
    .custom-btn:hover
      transform scale(1.1, 1.1)
.info-block
  margin 7.25rem 1rem
  color #475059
  .advantages
    height auto
    width 100%
    display flex
    flex-wrap wrap
    overflow hidden
    margin-bottom 6.75rem
  .advantage-card
    margin auto
    padding 1rem
    width 18rem
    height 14rem
    color #475059
    display flex
    flex-direction column
  .advantage__img
    margin auto
    height 60px
    width 60px
  .advantage__title
    width 100%
    text-align center
    font-size 24px
    margin 1.25rem 0
  .advantage__description
    width 17.5rem
    text-align center
    font-size 14px
  @media (max-width: 600px)
    .advantage-card
      margin auto
      padding 1rem
      width 95%
      height 14rem
      color #475059
      display flex
      flex-direction column
    .advantage__description
      width 100%
      text-align center
      font-size 14px
  .products
    padding 0 1rem
    height auto
  .products__header
    font-size 22px
    width 100%
    text-align center
    margin 2rem 0
  .product-card__container
    display flex
    flex-wrap wrap
    overflow hidden
  .product-card
    margin 1rem auto
    height 22rem
    width 19rem
    padding 3rem 2rem
    display flex
    flex-direction column
    border-radius 2px
    box-shadow 1px 1px 6px 3px rgba(158, 158, 158, 0.5)
  .product__logo
    margin 1rem auto
    width 60px
    height 60px
  .product__name
    font-size 20 px
    margin 0.5rem auto
  .product__description
    font-size 14px
    margin 0.5rem auto
    text-align center
  .get-started-btn
    margin auto
    color #5a666f
    background-color white
    height 30px
    width 100px
    border 1px solid #bfc5c9
    border-radius 2px
  .get-started-btn:hover
    transform scale(1.1, 1.1)
    font-weight bolder
  .get-started-btn:active
    border-color #e78643
    color #e78643
  @media (max-width: 600px)
    .products
      padding 0 0.1rem
      height auto
    .product-card
      margin 1rem auto
      height 22rem
      width 99%
      padding 2rem 1rem
      display flex
      flex-direction column
      border-radius 2px
      box-shadow 1px 1px 6px 3px rgba(158, 158, 158, 0.5)
  .learn-more
    margin 7.75rem 0
    width 100%
    display flex
    flex-direction column
    .info
      width 40rem
      margin 0 auto 1.875rem
    @media (max-width: 800px)
      .info
        width 100%
        margin 0 auto 1.875rem
    .learn-more__btn
      font-size 14px
      font-weight bold
      margin 0 auto
      background-color #e78643
      width 120px
      height 40px
      color white
      border 2px solid white
      border-radius 4px
    .learn-more__btn:active
      transform scale(0.95, 0.95) !important
      border 4px solid gainsboro
    .learn-more__btn:hover
      transform scale(1.1, 1.1)

.footer
  background-color #273e5d
  height 6.25rem
  display flex
  flex-direction column
  .socials
    color white
    margin auto
    .icon
      height 16px
      width 16px
      margin 1rem 0.5rem 0rem 0.5rem
    .icon:hover
      transform scale(1.1, 1.1)
    .icon:active
      color gray
  .copyright-info
    color white
    font-size 12px
    font-weight normal
    font-style normal
    font-stretch normal
    line-height normal
    letter-spacing normal
    text-align left
    margin auto

.d-flex
  display flex

.m-auto
  margin auto
